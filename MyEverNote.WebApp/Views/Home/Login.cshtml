@using MyEverNote.WebApp.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<br><br><br>
<br />

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <aside class="col-lg-4 offset-lg-4">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">
                        <h4 class="text-center">
                            Giriş
                        </h4>
                        <hr class="bg-light">

                        <p class="text-success text-center">
                            @Html.ValidationSummary(false)
                        </p>
                    </div>
                        <form>
                            <div class="card-body bg-white">
                                <br />
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                        </div>
                                        @Html.TextBoxFor(x => x.Username, htmlAttributes: new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                        </div>
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Login </button>
                                </div>
                            </div>
                        </form>
                    
                </div>
            </aside>
        </div>
    </div>

}
<br><br><br>
<script>
    $(function () {
        $("#baris").hide();
    });
</script>